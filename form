    <script>
       function d(){
        let a = document.getElementById("name").value;
        let b = document.getElementById("num1").value;
        let c = document.getElementById("email").value;

        let obj = {
            name: a,
            num : b,
            email: c
        }

        alert(`name: ${obj.name}, num: ${obj.num}, emial: ${obj.email}`);
        return false;
       }
    </script>
